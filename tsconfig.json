{
	"compilerOptions": {
		/* Base Options */
		"esModuleInterop": true,
		"skipLibCheck": true,
		"target": "es2022",
		"allowJs": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"forceConsistentCasingInFileNames": true,
		/* Strictness */
		"strict": true,
		/* Bundled projects */
		"lib": ["DOM", "DOM.Iterable", "ES2022"],
		"noEmit": true,
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"jsx": "react-jsx",
		"types": ["vite/client"],
		/* Path Aliases */
		"baseUrl": ".",
		"paths": {
			"~/*": ["./src/*"],
			"~/.source": [".source"]
		}
	},
	"include": ["**/*.ts", "**/*.tsx"]
}
